.box {
  height: 200px;
  border: 1px solid red;
}

.bullet-box {
  position: absolute;
  animation: RightToLeft 5s linear;
  overflow: hidden;
  left: 0;
  padding: 5px 10px;
  border: 1px solid red;
  color: black;
  transform: translateX(100vw);
  word-break: keep-all;
		white-space: nowrap;
}

.first {
  top: 20px;
}

.second {
  top: 60px;
}

@keyframes RightToLeft { 
  from { 
    transform: translateX(100vw); 
  }

  to { 
    transform: translateX(-100%); 
  }
} 